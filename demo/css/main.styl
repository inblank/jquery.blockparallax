@import "nib"

global-reset();
nested-reset();
reset-html5();

$colorBackground = #000

body
  background $colorBackground url(../img/pattern.jpg) top left

p
  width 1000px
  color #ccc
  margin 0 auto 0.5em auto
  font-size 15pt

.parallax
  position relative
  margin 2em auto
  width 1000px
  height 350px
  display block
  overflow hidden

.parallax-text
  position absolute
  font-family sans-serif
  top 50px
  left 150px
  font-size 24px
  color #f9ff99
  font-weight bold

.parallax-image
  position absolute
  top 40px
  left 300px
